		</plugins>
	</build>
	<dependencyManagement>
		<dependencies>
			<!-- Plug-in dependencies -->
			<dependency>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${maven-dependency-plugin}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
